<Page
        navigatingTo="onNavigatingTo"
        xmlns="http://schemas.nativescript.org/tns.xsd"
        xmlns:pr="nativescript-pull-reveal"
>

    <ActionBar>
        <Label text="Full Page 1"/>
    </ActionBar>

    <pr:PullRevealContext backgroundColor="yellow" tap="onReset">
        <StackLayout> <!-- user content -->
            <Image src="~/images/happyface.png"/>
            <Label text="Here is some content"/>
        </StackLayout>
        <pr:PullRevealDrawer backgroundColor="black" color="white" anchor="bottomRight" exposed="20">
            <Label text="Item 1"/>
            <Label text="Item 2"/>
            <Label text="Item 3"/>
            <Label text="Item 4"/>
            <Label text="Item 5"/>
            <Label text="Item 6"/>
            <Label text="Item 7"/>
            <Label text="Item 8"/>
            <Label text="Item 9"/>
            <Label text="Item 10"/>
        </pr:PullRevealDrawer>
    </pr:PullRevealContext>

</Page>
